SUBSTR  = aix-power
DESCR	= "AIX 4.3.3 or greater with 604, 604e or 630"
LIBS	= static shared
TARGETS	= serial pthreads smp omp
FLAGS  = -I/usr/lpp/pmtoolkit/include -qmaxmem=-1 -qarch=com
CFLAGS	= $(FLAGS) -DDEBUG -g
OPTFLAGS= -O3 -qstrict
FFLAGS	= $(FLAGS)
NOOPT	= 
SMPCFLGS= -qsmp
OMPCFLGS= -qsmp=omp
LDFLAGS = -L/usr/lpp/pmtoolkit/lib -lpmapi
CC_R	= xlc_r
CC	= xlc
CC_SHR	= xlc -G -r
F77	= xlf
CPP	= xlc -E

include Makefile.inc
