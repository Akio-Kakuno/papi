PERFCTR	= ./perfctr-2.4.5
PERFCTR_LIB_PATH = $(PERFCTR)/usr.lib
OPTFLAGS= -Wall -g -fomit-frame-pointer -mpentiumpro
TOPTFLAGS= -g -Wall -O0 -mpentiumpro
