#!/bin/sh
# Please don't mess with this file unless you are absolutely
# sure about what you're doing.

RANDOMKEY=`perl -e 'for (1..4) { \
                       srand(time+$$+$seed); \
                       printf("%4.5x", ($seed = int(rand(65536)))); } \
                    print "\n";'`
xauth add `hostname`/unix:0 . $RANDOMKEY
xauth add `hostname`:0 . $RANDOMKEY
SERVER=X
if [ -f /usr/local/X11R6.3/bin/X ] ; then
   SERVER=/usr/local/X11R6.3/bin/X
elif [ -f /usr/bin/X11/X ] ; then
   SERVER=/usr/bin/X11/X
fi
exec $SERVER -auth $HOME/.Xauthority
